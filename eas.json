{
	"cli": {
	  "version": ">= 3.6.0"
	},
	"build": {
	  "production": {
		"android": {
		  "buildType": "app-bundle" // Esta es la configuraci√≥n correcta para .aab
		},
		"ios": {
		  "enterpriseProvisioning": "adhoc"
		},
		"channel": "production"
	  },
	  "development": {
		"distribution": "internal",
		"android": {
		  "buildType": "apk"
		},
		"ios": {
		  "buildConfiguration": "Debug"
		},
		"channel": "development"
	  },
	  "preview": {
		"distribution": "internal",
		"android": {
		  "buildType": "apk"
		},
		"ios": {
		  "simulator": false
		},
		"channel": "preview"
	  }
	},
	"submit": {
	  "production": {
		"android": {
		  "serviceAccountKeyPath": "./google-play-service-account.json"
		},
		"ios": {
		  "appleId": "tu-correo@dominio.com",
		  "ascAppId": "1234567890"
		}
	  }
	}
  }