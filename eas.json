{
  "cli": {
    "version": ">= 3.6.0"
  },
  "build": {
    "production": {
      "android": {
        "buildType": "app-bundle",
        "image": "latest"                // ✅ fuerza entorno Android 15 (API 35) + soporte 16 KB
      },
      "ios": {
        "enterpriseProvisioning": "adhoc"
      },
      "channel": "production"
    },
    "development": {
      "distribution": "internal",
      "android": {
        "buildType": "app-bundle",
        "image": "latest"                // ✅ también aplica para builds internos
      },
      "ios": {
        "buildConfiguration": "Debug"
      },
      "channel": "development"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "app-bundle",
        "image": "latest"                // ✅ garantiza coherencia con los builds previos
      },
      "ios": {
        "simulator": false
      },
      "channel": "preview"
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./google-play-service-account.json"
      },
      "ios": {
        "appleId": "tu-correo@dominio.com",
        "ascAppId": "1234567890"
      }
    }
  }
}
